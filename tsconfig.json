{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["DOM", "ES2015"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "outDir": "lib",
    "preserveConstEnums": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "skipLibCheck": false,
    "sourceMap": true,
    "strict": true,
    "target": "ES5",
    "typeRoots": [
      "node_modules/@types",
      "./typings"
    ]
  },
  "exclude": [
    "**/*.js",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/types.ts"
  ],
  "include": [
    "src/**/*"
  ]
}
