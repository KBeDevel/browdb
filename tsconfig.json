{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["DOM", "ES2015", "ES2021"],
    "module": "commonjs",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "preserveConstEnums": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": false,
    "sourceMap": false,
    "strict": true,
    "target": "ES5",
    "typeRoots": [
      "node_modules/@types",
      "./typings"
    ]
  },
  "exclude": [
    "**/*.js",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/types.ts"
  ],
  "include": [
    "src/**/*"
  ]
}
